{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es2016",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
